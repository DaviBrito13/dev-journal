<%= form_with(model: blog_post, class: "flex flex-col") do |form| %>

  <%if form.object.errors.any?%>
    <div>
      <%form.object.errors.full_messages.each do |message|%>
        <div>
          <%=message%>
        </div>
      <%end%>
    </div>
  <%end%>

  <div class= "flex flex-col">
    <%=form.label :title%>
    <%=form.text_field :title%>
  </div>
  
  <div class= "flex flex-col">
    <%=form.label :body%>
    <%=form.text_area :body%>
  </div>

  <%=form.button(class: "bg-gray-100 px-4 py-2 rounded my-8 hover:bg-gray-200")%>

<%end%>